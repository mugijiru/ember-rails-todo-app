<h2>TODO List</h2>
<div class="p-todo-list__actions">
  {{my-button text="Create" click=(action "build")}}
  {{my-button text="Delete Completed Items" isDanger=true click=(action "deleteCompletedItems")}}
  {{my-toggle-switch label='Hide completed items?' offLabel='Show' onLabel='Hide' enabled=hiddenCompleted  click=(action "toggleHiddenCompletedItems")}}
</div>
<ul class="p-todo-list">
  {{#each listedTodoItems as |todoItem| }}
    {{todo-item item=todoItem setEditingRecord=(action "edit")}}
  {{/each}}
</ul>
{{todo-item-form-modal item=editingTodoItem}}
